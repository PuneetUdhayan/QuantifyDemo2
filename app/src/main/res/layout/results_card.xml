<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#64A69A"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/results_test_name"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Data Analytics test 1"
            android:textStyle="bold"
            android:textColor="#FFFFFFFF"/>

        <TextView
            android:id="@+id/results_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Parkavi"
            android:textColor="#FFFFFFFF"
            android:paddingBottom="10dp"/>

        <RelativeLayout
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button_two">

            <TextView
                android:id="@+id/results_marks_obtained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Obtained marks"
                android:textColor="#FFFFFFFF"/>

            <TextView
                android:id="@+id/results_total_marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total marks"
                android:layout_alignParentRight="true"
                android:textColor="#FFFFFFFF"/>

            <TextView
                android:id="@+id/previous_marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="30sp"
                android:textColor="#FFFFFFFF"
                android:layout_below="@id/results_marks_obtained"/>

            <TextView
                android:id="@+id/previous_total"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/results_total_marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="30sp"
                android:text="30"/>

        </RelativeLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>